<?xml version="1.0" encoding="UTF-8"?>
<!--
    ================================================
    IIS Redirect Configuration
    ================================================
    Coloca este archivo en: C:\M7Aplicaciones\Avery\web.config
    
    Este archivo redirige TODAS las peticiones a:
    http://avery.millasiete.com:8035/Avery-dennison/
    
    REQUISITOS:
    1. IIS instalado
    2. URL Rewrite Module instalado
       Descarga: https://www.iis.net/downloads/microsoft/url-rewrite
-->
<configuration>
    <system.webServer>
        
        <!-- ============================================ -->
        <!-- OPCIÓN 1: Redirección HTTP 301 (Permanente) -->
        <!-- ============================================ -->
        <rewrite>
            <rules>
                <rule name="Redirect to Avery-dennison" stopProcessing="true">
                    <match url=".*" />
                    <conditions>
                        <add input="{REQUEST_URI}" pattern="^/Avery-dennison/" negate="true" />
                    </conditions>
                    <action type="Redirect" 
                            url="http://avery.millasiete.com:8035/Avery-dennison/{R:0}" 
                            redirectType="Permanent" />
                </rule>
            </rules>
        </rewrite>

        <!-- ============================================ -->
        <!-- OPCIÓN 2: Proxy Reverso (Sin cambiar URL)   -->
        <!-- ============================================ -->
        <!--
        <rewrite>
            <rules>
                <rule name="Proxy to Docker Container" stopProcessing="true">
                    <match url="(.*)" />
                    <action type="Rewrite" url="http://localhost:8035/{R:1}" />
                </rule>
            </rules>
        </rewrite>
        -->

        <!-- Configuración de errores personalizados -->
        <httpErrors errorMode="Custom" existingResponse="Replace">
            <remove statusCode="404" subStatusCode="-1" />
            <error statusCode="404" 
                   path="/Avery-dennison/" 
                   responseMode="Redirect" />
        </httpErrors>

        <!-- Headers de seguridad -->
        <httpProtocol>
            <customHeaders>
                <add name="X-Frame-Options" value="SAMEORIGIN" />
                <add name="X-Content-Type-Options" value="nosniff" />
            </customHeaders>
        </httpProtocol>

    </system.webServer>
</configuration>
